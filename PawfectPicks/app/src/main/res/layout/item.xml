<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/yellow_button"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/petPic"
        android:layout_width="137dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:id="@+id/labelName"
        android:text="Name : "
        android:textColor="#6E0404"
        android:layout_toEndOf="@id/petPic"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Happy"
        android:textColor="#6E0404"
        android:layout_toEndOf="@id/labelName"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:id="@+id/labelAge"
        android:text="Age : "
        android:textColor="#6E0404"
        android:layout_toEndOf="@id/petPic"
        android:layout_below="@+id/labelName"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/petAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_toEndOf="@id/labelName"
        android:layout_below="@id/petName"
        android:text="1 Year"
        android:textColor="#6E0404"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:id="@+id/labelType"
        android:text="Type : "
        android:textColor="#6E0404"
        android:layout_toEndOf="@id/petPic"
        android:layout_below="@+id/labelAge"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/petType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_toEndOf="@id/labelType"
        android:layout_below="@id/petAge"
        android:text="Dog"
        android:textColor="#6E0404"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:id="@+id/labelGender"
        android:text="Gender : "
        android:textColor="#6E0404"
        android:layout_toEndOf="@id/petPic"
        android:layout_below="@+id/labelType"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/petGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_toEndOf="@id/labelGender"
        android:layout_below="@id/petType"
        android:text="Male"
        android:textColor="#6E0404"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/petPic"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"/>


</RelativeLayout>